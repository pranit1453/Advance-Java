package com.demo.dao;

import java.util.HashSet;
import java.util.Set;

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;

import com.demo.beans.Course;
import com.demo.beans.Students;

public class StudentDaoImpl implements StudentDao {
	static SessionFactory sf;
	static {
		sf = HibernateConnect.getMySessionFactory();
	}

	@Override
	public boolean showManyToOne(Students s) {
		if (sf != null) {
			try (Session session = sf.openSession()) {
				Transaction tr = session.beginTransaction();
				Course course = s.getCse(); // retrieve complete object

				if (course != null) {
					Course existingcourse = session.get(Course.class, course.getCid());
					if (existingcourse != null) {
						existingcourse.getSset().add(s); // add student to exisitng course
						s.setCse(existingcourse); // update student reference on both sides
						session.saveOrUpdate(existingcourse); // update the course
					} else {
						session.save(course);
						s.setCse(course);
					}
				} else {
					System.out.println("Course cannot be null!");
					return false;
				}
				session.save(s);
				tr.commit();
				return true;
			} catch (Exception e) {
				System.out.println("Error : " + e.getMessage());
			}
		}

		return false;
	}

	@Override
	public Set<Students> getData(Set<Integer> sids) {
		Set<Course> sset = new HashSet<>();
		if (sf != null) {
			try (Session session = sf.openSession()) {
				Transaction tr = session.beginTransaction();
				for (Integer id : sids) {
					Students stud = session.get(Students.class, id);
					sset.add(stud);
				}

				tr.commit();
				return cset;
			} catch (Exception e) {
				System.out.println("Error : " + e.getMessage());
			}
		}
		return null;
	}

}
